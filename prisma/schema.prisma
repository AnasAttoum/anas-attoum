generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Skill {
  id      String  @id @default(uuid())
  order   Int
  name    String
  color   String
  image   String
  enabled Boolean @default(true)

  createdAt DateTime @default(now())
}

enum projectType {
  project
  page
  game
  component
}

model Project {
  id             String      @id @default(uuid())
  order          Int
  name           String
  type           projectType
  code           String
  demo           String
  description_de String
  description_en String
  technologies   String[]
  video          String
  image          String
  mockup         String
  logo           String
  enabled        Boolean     @default(true)

  createdAt DateTime @default(now())
}
